<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicphrase">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="do you\n speak english"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="doyouspeakenglish"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good evening"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="goodevening"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="hello"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="how are you ?"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="howareyou"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i live in"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="ilivein"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my name is"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="mynameis"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="please"
            android:onClick="playphrase"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome"
            app:layout_gravity="fill"
            android:layout_margin="5dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:tag="welcome"
            android:onClick="playphrase"/>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>